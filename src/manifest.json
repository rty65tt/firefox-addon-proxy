{
  "name": "Proxy Rutor + Rutracker",
  "description": "Proxy for rutracker.org, rutor.is, rutor,info",
  "manifest_version": 2,
  "short_name": "proxy",
  "version": "1.1",

  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  },

  "applications": {
    "gecko": {
      "id": "proxy@rty65tt.org",
      "strict_min_version": "56.0a1"
    }
  },

  "background": {
    "scripts": [ "background.js" ]
  },
  "page_action": {
      "show_matches": [
    "*://rutracker.org/*",
    "*://rutor.info/*",
    "*://rutor.is/*"
      ],
     "default_icon": { "19":"icons/icon.svg" },
     "default_title": "Proxy On"
  },

  "permissions": [
    "*://rutracker.org/*",
    "*://rutor.info/*",
    "*://rutor.is/*",
    "activeTab", "proxy"
  ]

}
