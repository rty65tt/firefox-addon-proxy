{
  "name": "Proxy Rutor + Rutracker",
  "description": "Proxy for rutracker.org, rutor.is, rutor,info, rutor.org",
  "manifest_version": 2,
  "short_name": "proxy",
  "version": "1.0",

  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  },

  "applications": {
    "gecko": {
      "id": "proxy@rty65tt.org",
      "strict_min_version": "56.0a1"
    }
  },

  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "page_action": {
     "browser_style": true,
     "show_matches": [
        "*://rutracker.org/*",
        "*://rutor.org/*",
        "*://rutor.info/*",
        "*://rutor.is/*"
      ],
     "default_icon": { "19":"icons/icon.svg" },
     "default_title": "Proxy On"
  },

  "permissions": ["activeTab", "proxy"]

}
